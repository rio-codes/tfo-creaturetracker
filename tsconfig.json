{
    "compilerOptions": {
        "allowImportingTsExtensions": true,
        "allowJs": true,
        "baseUrl": ".",
        "esModuleInterop": true,
        "incremental": false,
        "isolatedModules": true,
        "jsx": "react-jsx",
        "lib": ["dom", "dom.iterable", "esnext"],
        "module": "esnext",
        "moduleResolution": "node",
        "noEmit": true,
        "paths": {
            "@/*": ["./*"]
        },
        "plugins": [
            {
                "name": "next"
            }
        ],
        "removeComments": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "strict": true,
        "strictPropertyInitialization": false,
        "target": "esnext"
    },
    "include": [
        "types/next-auth.d.ts",
        "types/next-env.d.ts",
        "next-env.d.ts",
        "**/*.ts",
        "**/*.tsx",
        ".next/types/**/*.ts",
        "eslint.config.mjs",
        ".next/dev/types/**/*.ts"
    ],
    "exclude": ["node_modules", ".next"]
}
