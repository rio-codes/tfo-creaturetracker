{
    "compilerOptions": {
        "lib": ["dom", "dom.iterable", "esnext"],
        "allowImportingTsExtensions": true,
        "allowJs": true,
        "target": "esnext",
        "skipLibCheck": true,
        "strict": true,
        "strictPropertyInitialization": false, // Keep this if you use classes with ORMs/DI
        "noEmit": true,
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "bundler",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "incremental": true,
        "plugins": [
            {
                "name": "next"
            }
        ],
        "baseUrl": ".",
        "paths": {
            "@/*": ["./*"]
        }
    },
    "include": [
        "types/next-auth.d.ts",
        "types/next-env.d.ts",
        "**/*.ts",
        "**/*.tsx",
        ".next/types/**/*.ts",
        "eslint.config.ts"
    ],
    "exclude": ["node_modules", ".next"]
}
